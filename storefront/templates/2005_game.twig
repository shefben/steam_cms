<tr><td height="100%">
    <table align="center" cellspacing="0" cellpadding="0" style="height:100%;">
    <tr>
        <td bgcolor="#FFFFFF" valign="top" style="width:10px;height:10px"><img src="img/storefront/sp_top_left.gif"></td>
        <td bgcolor="#FFFFFF" valign="top" rowspan="3">
            <table align="center" width="736" cellspacing="0" cellpadding="0" border="0" style="height:100%;">
            <tr>
                <td width="10" valign="top" align="left" nowrap></td>
                <td width="118" valign="top" align="left" nowrap>
                    <table cellspacing="0" cellpadding="0">
                    <tr><td height="10"></td></tr>
                    <tr><td nowrap>
                        {% for ln in links %}
                          {% if ln.type == 'spacer' %}
                            <div class="menu_spacer">&nbsp;</div>
                          {% elseif ln.hidden is empty %}
                            {% if ln.current is not empty %}
                              <span><font face="Wingdings 3"><span class="menu_pointer">&#132;</span></font> <a href="{{ ln.url }}" class="menu_item_current">{{ ln.label }}</a></span><br>
                            {% else %}
                              <span><a href="{{ ln.url }}" class="menu_item">{{ ln.label }}</a></span><br>
                            {% endif %}
                          {% endif %}
                        {% endfor %}
                    </td></tr>
                    </table>
                </td>
                <td width="8"><nobr>&nbsp;&nbsp;</nobr></td>
                <td width="100%" valign="top" align="left">
                    <table cellpadding="0" cellspacing="0">
                    <tr><td width="600" height="50" background="img/title_grey.jpg"><span class="page_title">&nbsp;&nbsp;{{ app.name }}</span></td></tr>
                    <tr><td height="10"></td></tr>
                    <tr><td>
                    <span class="normal_text">
                        <table bgcolor="#555555" cellpadding="0" cellspacing="0" width="600">
                        <tr><td class="game_description">
                            <span style="font-family: Arial; font-size: 26px; color: #ffffff;">{{ app.name }}</span>
                            <span style="font-family: Arial; font-size: 10px; color: #ffffff;"><br><br>{{ app.description|nl2br }}</span>
                        </td>
                        <td align="right">
                            <table cellpadding="0" cellspacing="0">
                            <tr>
                                <td background="img/tab_left_red.gif" width="5" height="20" nowrap></td>
                                <td bgcolor="#800000" background="img/tab_middle_red.gif" width="100%" nowrap align="center">
                                    {% if is_demo %}
                                    <a class="purchase_button" href="steam://install/{{ appid }}">Install Game</a>
                                    {% else %}
                                    <a class="purchase_button" href="steam://purchase/{{ packages[0].subid ?? appid }}">Purchase</a>
                                    {% endif %}
                                </td>
                                <td background="img/tab_right_red.gif" width="5" height="20" nowrap></td>
                            </tr>
                            </table>
                        </td></tr></table>
                        <table width="100%" cellpadding="0" cellspacing="0">
                        <tr><td height="5"></td></tr>
                        <tr>
                            <td width="600" height="68" background="img/screenshots.jpg" valign="middle">
                                <table width="100%" cellpadding="0" cellspacing="0">
                                <tr>
                                    <td width="84" nowrap></td>
                                    <td width="100%">
                                    {% for img in images %}
                                        <img src="screenshots/{{ img }}" border="0" hspace="10" style="border:1px Solid #5594a3;">
                                    {% endfor %}
                                    </td>
                                </tr></table>
                            </td>
                        </tr>
                        </table>
                        <div class="line_spacer"></div>
                        {% if packages %}
                        <table cellpadding="0" cellspacing="0" width="600">
                        <tr><td colspan="6" width="100%"><span class="purchase_header">Purchase as part of:</span></td></tr>
                        {% for p in packages %}
                        <tr>
                            <td width="100%" valign="top"><span class="package_title">{{ p.name }}</span><br></td>
                            <td nowrap valign="top">
                                <table cellpadding="0" cellspacing="0" width="110">
                                <tr>
                                    <td width="5" height="20" background="img/tab_left_gray.gif" nowrap></td>
                                    <td width="100%" bgcolor="#dddddd" background="img/tab_middle_gray.gif" nowrap align="center"><a href="index.php?area=package&SubId={{ p.subid }}" class="details_button">Package Details</a></td>
                                    <td width="5" height="20" background="img/tab_right_gray.gif" nowrap></td>
                                </tr>
                                </table>
                            </td>
                            <td nowrap valign="top">&nbsp;</td>
                            <td nowrap align="right" valign="top"><span class="package_title">${{ p.price }}</span></td>
                            <td nowrap valign="top">&nbsp;&nbsp;</td>
                            <td nowrap valign="top">
                                <table cellpadding="0" cellspacing="0" width="110">
                                <tr>
                                    <td width="5" height="20" background="img/tab_left_red.gif" nowrap></td>
                                    <td width="100%" bgcolor="#800000" background="img/tab_middle_red.gif" nowrap align="center"><a href="steam://purchase/{{ p.subid }}" class="purchase_button">Purchase</a></td>
                                    <td width="5" height="20" background="img/tab_right_red.gif" nowrap></td>
                                </tr>
                                </table>
                            </td>
                        </tr>
                        <tr><td colspan="6" width="100%"><div class="line_spacer"></div></td></tr>
                        {% endfor %}
                        </table>
                        {% endif %}
                        {% if sysreq %}
                        <table cellspacing="0" cellpadding="0" width="100%">
                        <tr>
                            <td width="100%"><span class="purchase_header">system Requirements</span><br><span style="color:gray;">{{ sysreq|nl2br }}</span></td>
                            <td nowrap>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                        </tr>
                        </table>
                        {% endif %}
                    </span>
                    </td></tr>
                    </table>
                </td>
            </tr>
            </table>
        </td>
        <td bgcolor="#FFFFFF" valign="top" style="width:10px;height:10px"><img src="img/storefront/sp_top_right.gif"></td>
    </tr>
    <tr><td bgcolor="#FFFFFF"></td><td bgcolor="#FFFFFF"></td></tr>
    <tr>
        <td bgcolor="#FFFFFF" valign="bottom" style="width:10px;height:10px"><img src="img/storefront/sp_bottom_left.gif"></td>
        <td bgcolor="#FFFFFF" valign="bottom" style="width:10px;height:10px"><img src="img/storefront/sp_bottom_right.gif"></td>
    </tr>
    </table>
