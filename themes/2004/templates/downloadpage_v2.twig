<h1>GET STEAM NOW</h1>
{% if files %}
    {% set main = files[0] %}
    <p><a href="{{ main.main_url }}">{{ getsteamnow_button('  CLICK HERE TO DOWNLOAD THE STEAM INSTALLER ( < 1MB )')|raw }}</a></p>
    <div class="sidebar">
    {% for file in files|slice(1) %}
        <h3>{{ file.title }}</h3>
        <ul>
        {% for m in file.mirrors %}
            <li><a class="maize" href="{{ m.url }}">{{ loop.index }}: {{ m.host }}</a></li>
        {% endfor %}
        </ul>
    {% endfor %}
    </div>
{% endif %}
