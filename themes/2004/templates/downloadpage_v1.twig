<h1>GET STEAM NOW</h1>
{% if files %}
    {% set main = files[0] %}
    <p><a class="maize" href="{{ main.main_url }}">{{ main.title }}</a></p>
    {% for file in files|slice(1) %}
        <h2>{{ file.title }}</h2>
        <ul>
        {% for m in file.mirrors %}
            <li><a class="maize" href="{{ m.url }}">{{ loop.index }}: {{ m.host }}</a></li>
        {% endfor %}
        </ul>
    {% endfor %}
{% endif %}
