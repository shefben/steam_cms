                        {% if current_user %}
                            Welcome, {{ current_user.username }}! |
                            <a href="{{ url('forum.account') }}">Account Options</a> |
                            <a href="{{ url('forum.private_messages') }}">Private Messages ({{ unread_message_count }})</a> |
                            <a href="{{ url('forum.logout') }}">Logout</a>
                        {% else %}
                            <a href="{{ url('forum.register') }}">Create Account</a> |
                            <a href="{{ url('forum.login') }}">Login</a> |
                            <a href="{{ url('forum.forgot_password') }}">Lost Password</a> |
