            <td height="1" width="224"><spacer height="1" type="block" width="224"/></td>
            <td height="1" width="545"><spacer height="1" type="block" width="545"/></td>
            <td height="1" width="13"><spacer height="1" type="block" width="13"/></td>
            <td height="1" width="1"><spacer height="1" type="block" width="1"/></td>
        </tr>
    </table>
    <br/>

    <!-- Main Content Table -->
    <table align="center" bgcolor="#626D5C" border="0" cellpadding="5" cellspacing="0" width="798">
        <tr valign="top">
            <td align="left" bgcolor="#4c5844" width="100%">
                <div align="center">
                    <center>
                        <table border="0" cellspacing="0" width="100%">
                            <tr>
                                <td width="100%">
                                    <b><font color="#FFFFFF" face="Arial" size="5">Post Message</font><font face="Arial" size="2"><br/></font></b>
                                    <font face="Arial" size="2">
                                        Enter the details of the message you'd like to post in the boxes below and click the button at the bottom of the form.
                                        <b></b>
                                    </font>
                                    
                                    {% if errors %}
                                        <p><font color="red" face="Arial" size="2">
                                            {% for error in errors %}
                                                {{ error }}<br/>
                                            {% endfor %}
                                        </font></p>
                                    {% endif %}

                                    <p><font face="Arial" size="2"></font></p>
                                    
                                    <form action="{{ url('forum.post_submit') }}" enctype="multipart/form-data" method="POST">
                                        <input name="csrf_token" type="hidden" value="{{ csrf_token }}"/>
                                        <input name="board_id" type="hidden" value="{{ board_id }}"/>
                                        <input name="thread_id" type="hidden" value="{{ thread_id|default(0) }}"/>
                                        <input name="reply_to" type="hidden" value="{{ reply_to|default(0) }}"/>
                                        
                                        <table border="0" cellspacing="0" width="100%">
                                            {% if thread_id == 0 %}
                                            <tr>
                                                <td width="20%"><font face="Arial" size="2">Subject</font></td>
                                                <td width="80%">
                                                    <input maxlength="100" name="subject" size="30" type="text" value="{{ post_data.subject|default('') }}" required/>
                                                </td>
                                            </tr>
                                            {% endif %}
                                            <tr>
                                                <td width="20%"><font face="Arial" size="2">Message</font></td>
                                                <td width="80%">
                                                    <textarea cols="60" name="message" rows="8" wrap="virtual" required>{{ post_data.message|default('') }}</textarea>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="20%"><font face="Arial" size="2">Notify</font></td>
                                                <td width="80%">
                                                    <font face="Arial" size="2">
                                                        <input name="alert" type="checkbox" value="ON" {{ post_data.alert ? 'checked' : '' }}/>
                                                        <a href="#" target="_blank">Bearkey Alert</a> me when this topic is updated (registered users only)<br/>
                                                        <input name="notify" type="checkbox" value="ON" {{ post_data.notify ? 'checked' : '' }}/>
                                                        Email me when this topic is updated (registered users only)
                                                    </font>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2" width="100%">
                                                    <font color="#4C5844" face="Arial" size="2">.</font>
                                                </td>
                                            </tr>
                                            
                                            {% if not current_user %}
                                            <tr>
                                                <td width="20%"></td>
                                                <td width="80%">
                                                    <font face="Arial" size="2">Email </font>
                                                    <input name="email" size="10" type="email" value="{{ post_data.email|default('') }}" required/>
                                                    <font face="Arial" size="2">Password </font>
                                                    <input maxlength="50" name="password" size="8" type="password" value="" required/>
                                                    <input name="rememberme" type="checkbox" value="ON"/>
                                                    <font face="Arial" size="2">Remember Me</font>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="20%"></td>
                                                <td width="80%">
                                                    <font face="Arial" size="2">
                                                        If you don't already have an account, you can 
                                                        <a href="{{ url('forum.register') }}">signup for one here</a>.<br/>
                                                        If you have a signature setup, it will be automatically appended to your message.
                                                    </font>
                                                </td>
                                            </tr>
                                            {% endif %}
                                        </table>
                                        
                                        <p align="center">
                                            <center>
                                                <font face="Arial" size="2">
                                                    {% if current_user %}
                                                        <input name="postsubmit" type="submit" value="Post Message"/>
                                                    {% else %}
                                                        <input name="postlogin" type="submit" value="Post with Login (email/pw required)"/>
                                                    {% endif %}
                                                </font>
                                            </center>
                                        </p>
                                    </form>
                                </td>
                            </tr>
                        </table>
                    </center>

                    <!-- BB Code Help -->
                    <p align="left">
                        <b><font face="Arial" size="2">Special Codes</font></b>
                        <ul type="square">
                            <li><font face="Arial" size="2">b[<b>bold text</b>]b</font></li>
                            <li><font face="Arial" size="2">i[<i>italic text</i>]i</font></li>
                            <li><font face="Arial" size="2">u[<u>underline text</u>]u</font></li>
                            <li><font face="Arial" size="2">-[<strike>strikethrough text</strike>]-</font></li>
                            <li><font face="Arial" size="2">q[quote text (indented)]q</font></li>
                            <li><font face="Arial" size="2">+[bullet point]+</font></li>
                            <li><font face="Arial" size="2">c[code text]c</font></li>
                            <li><font face="Arial" size="2">1{<font color="#d6e4e2">coloured text 1</font>}1</font></li>
                            <li><font face="Arial" size="2">2{<font color="#eecfcc">coloured text 2</font>}2</font></li>
                            <li><font face="Arial" size="2">3{<font color="#cceed2">coloured text 3</font>}3</font></li>
                            <li><font face="Arial" size="2">4{<font color="#cfd5f5">coloured text 4</font>}4</font></li>
                        </ul>
                        <center></center>
                    </p>
                </div>
            </td>
        </tr>
    </table>
</div>

