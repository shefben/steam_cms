<div class="draggable-window sidebar-window" id="sidebar">
    <div class="window-header">Navigation
        <div class="window-controls">
            <button class="window-control minimize-btn" onclick="minimizeWindow('sidebar')" aria-label="Minimize"></button>
            <button class="window-control close-btn" onclick="closeWindow('sidebar')" aria-label="Close"></button>
        </div>
    </div>
    <div class="window-content">
        <ul class="nav-list">
            {{ nav|raw }}
        </ul>
    </div>
    <div class="resize-handle" onmousedown="startResize(event,'sidebar')"></div>
</div>
