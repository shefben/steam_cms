<main class="main-content">
<header class="header">
                      <div class="header-left">
                        <h2>{{ page_title }}</h2>
                        <p class="header-subtitle">Welcome back, Administrator</p>
                      </div>
                        <div class="header-right">
                            <form class="search-box" action="search.php" method="get">
                              <svg class="search-icon" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"></path>
                              </svg>
                              <input type="text" name="q" class="search-input" placeholder="Search content, users, settings...">
                            </form>
                        <div class="header-actions">
                        <div class="notifications">
                            <div class="icon-btn notification-toggle" id="notification-btn">
                                <i class="fas fa-bell"></i>
                                {% if notifications_html %}
                                <div class="notification-dot"></div>
                                {% endif %}
                            </div>
                            <div class="notification-dropdown" id="notification-dropdown">
                                <div class="notification-header">
                                    <h4>Notifications</h4>
                                    <button class="close-notifications" id="close-notifications">&times;</button>
                                </div>
                                <div class="notification-content">
                                    {% if notifications_html %}
                                        {{ notifications_html|raw }}
                                    {% else %}
                                        <div class="no-notifications">
                                            <i class="fas fa-check-circle"></i>
                                            <p>No new notifications</p>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            </div>
                            <div class="user-profile">
                            <div class="user-avatar">{{ admin_initials }}</div>
                                  <div class="user-details">
                                    <h4>{{ admin_name }}</h4>
                                    <p>Administrator</p>
                                  </div>
                                  </div>
                        </div>
                    </div></header>
<div class="stat-card" style="padding-top: 25px;">

    {{ content|raw }}
</div>
</main>
