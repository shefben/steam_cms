<h1>GET STEAM NOW</h1>
<h2>IN MINUTES, <em>YOU'LL BE PLAYING YOUR FAVORITE GAMES</em></h2>
<img src="images/Graphic_box.jpg" width="24" height="6" alt=""><br>
<div class="narrower">
{% if files %}
    {% set file = files[0] %}
    <h3>{{ file.title }}{% if file.file_size %}: ({{ file.file_size }}){% endif %}</h3><br>
    {% set half = (file.mirrors|length / 2)|round(0, 'ceil') %}
    <table width="525" cellpadding="0" cellspacing="0">
        <tr>
            <td valign="top" width="50%">
                {% for m in file.mirrors[:half] %}
                <table cellspacing="0" cellpadding="0">
                    <tr>
                        <td><img src="images/black_button_rightside.gif" width="10" height="24" alt=""></td>
                        <td bgcolor="#000000" align="center" width="150"><a class="maize" href="{{ m.url }}">{{ loop.index }}: {{ m.host }}</a></td>
                        <td><img src="images/black_button_rightside.gif" width="10" height="24" alt=""></td>
                    </tr>
                </table>
                <br>
                {% endfor %}
            </td>
            <td valign="top" width="50%">
                {% for m in file.mirrors[half:] %}
                <table cellspacing="0" cellpadding="0">
                    <tr>
                        <td><img src="images/black_button_rightside.gif" width="10" height="24" alt=""></td>
                        <td bgcolor="#000000" align="center" width="150"><a class="maize" href="{{ m.url }}">{{ half + loop.index }}: {{ m.host }}</a></td>
                        <td><img src="images/black_button_rightside.gif" width="10" height="24" alt=""></td>
                    </tr>
                </table>
                <br>
                {% endfor %}
            </td>
        </tr>
    </table>
{% endif %}
<hr>
{{ system_requirements|raw }}
</div>
