<h1>GET STEAM NOW</h1>
{% for file in files %}
    <h3>{{ file.title }}{% if file.file_size %}: ({{ file.file_size }}){% endif %}</h3>
    <ul>
    {% for m in file.mirrors %}
        <li><a class="maize" href="{{ m.url }}">{{ loop.index }}: {{ m.host }}</a></li>
    {% endfor %}
    </ul>
{% endfor %}
